//@version=6
indicator("NYSE Market Open Lines", overlay=true)

// Input for customizing line appearance
lineColor = input.color(color.new(color.blue, 70), "Market Open Line Color")
lineWidth = input.int(1, "Line Width", minval=1, maxval=4)
lineStyle = input.string("dashed", "Line Style", options=["solid", "dashed", "dotted"])

// Function to check if current bar is at market open time
isMarketOpen() =>
    hour == 14 and minute == 30

// Draw vertical line at market open
if isMarketOpen()
    line.new(x1=bar_index, y1=low - (high - low), x2=bar_index, y2=high + (high - low), color=lineColor, width=lineWidth, style=lineStyle == "solid" ? line.style_solid : lineStyle == "dashed" ? line.style_dashed : line.style_dotted) 